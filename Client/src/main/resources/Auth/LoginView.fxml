        <Button fx:id="exitButton" layoutX="283.0" layoutY="422.0" mnemonicParsing="false" onAction="#onExitButtonClicked" prefHeight="26.0" prefWidth="171.0" text="Выход из приложения" />
        <Label layoutX="277.0" layoutY="88.0" prefHeight="156.0" prefWidth="294.0" text="Авторизация">
         <font>
            <Font size="30.0" />
         </font></Label>
    </AnchorPane>
</VBox>
