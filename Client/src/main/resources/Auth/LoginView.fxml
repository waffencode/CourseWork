<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.course.client.controllers.auth.LoginController">
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" VBox.vgrow="ALWAYS">
        <TextField fx:id="loginField" layoutX="283.0" layoutY="300.0" prefHeight="26.0" prefWidth="171.0" promptText="Логин" />
        <PasswordField fx:id="passwordField" layoutX="283.0" layoutY="339.0" prefHeight="26.0" prefWidth="171.0" promptText="Пароль" />
        <Button fx:id="signInButton" layoutX="387.0" layoutY="384.0" mnemonicParsing="false" onAction="#onSignInButtonClicked" prefHeight="26.0" prefWidth="66.0" text="Вход" />
