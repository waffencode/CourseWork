    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" VBox.vgrow="ALWAYS">
        <Button layoutX="414.0" layoutY="316.0" mnemonicParsing="false" onAction="#onBackButtonClicked" text="Назад" />
